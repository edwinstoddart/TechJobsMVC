<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key.Equals(ViewBag.searchType)" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }
        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @if (ViewBag.jobs != null)
    {
        @foreach (Job job in ViewBag.jobs)
        {
            <table class="job-listing">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>@job.Id</td>
                    </tr>
                    <tr>
                        <th scope="row">Name</th>
                        <td>@job.Name</td>
                    </tr>
                    <tr>
                        <th scope="row">Employer</th>
                        <td>@job.Employer</td>
                    </tr>
                    <tr>
                        <th scope="row">Location</th>
                        <td>@job.Location</td>
                    </tr>
                    <tr>
                        <th scope="row">Position Type</th>
                        <td>@job.PositionType</td>
                    </tr>
                    <tr>
                        <th scope="row">Skill</th>
                        <td>@job.CoreCompetency</td>
                    </tr>
                </tbody>
            </table>
        }
    }
</div>